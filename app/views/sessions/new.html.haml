%body.user-form-body
  .user-form-content
    .title-logo
      = link_to root_path do
        %span.first-word
          Canteen
        %span.second-word
          Koala
    %h1 Log in
    - flash.each do |type, msg|
      = msg
    = form_with(url: login_path, scope: :session, local: true) do |form|

      .field
        = form.label :email
        = form.text_field :email
        .password-forgot
          = link_to 'Forgot password?', new_password_reset_path

      .field
        = form.label :password
        = form.password_field :password

      .field
        .checkbox
          = form.check_box :remember_me
          Remember me on this computer

      .button
        = form.submit 'Log In'
  = image_tag 'form-back.jpg', alt: 'cover-image', class: 'cover-img'
