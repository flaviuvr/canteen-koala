%body.showBody
  %a.titleLogo{:href => root_path}
    %span.firstWord Canteen
    %span.secondWord Koala
  .itemContents
    .itemImage= image_tag @product.image
    .title= @product.title
    .category= @product.description
    .price= @product.price
  .itemButtons
    .button= link_to 'Edit', edit_product_path(@product)
    .button= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure you want to remove this item?' }
    .button= link_to 'Back', root_path
